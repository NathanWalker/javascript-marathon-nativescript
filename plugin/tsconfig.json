{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": true,
      "noEmitHelpers": true,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "lib": [
          "es2017",
          "dom",
          "es6"
      ]
  },
  "exclude": [
      "node_modules",
      "platforms"
  ]
}